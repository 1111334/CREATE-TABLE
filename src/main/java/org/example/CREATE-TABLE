  CREATE TABLE INGREDIENT (
                NAME VARCHAR(255),
                CONTAINS_LACTOSE BOOLEAN,
                VEGETARIAN BOOLEAN,
                VEGAN BOOLEAN,
                GLUTEN_FREE BOOLEAN
  );

